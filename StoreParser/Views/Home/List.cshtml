@using StoreParser.Dtos
@model IEnumerable<ItemDto>

@{
    ViewData["Title"] = "Items list";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Any())
{
    <div class="table">
        <table class="table table-hover" >
            <thead>
                <tr>
                    <td>
                        <b>Image</b>
                    </td>
                    <td>
                        <b>Description</b>
                    </td>
                    <th>
                        <b>Link to products page in store</b>
                    </th>
                    <th>
                        <b>Count</b>
                    </th>
                    <th>
                        <b>Options</b>
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>                    
                    <td>
                        <img src="@item.ImageSource" alt="@item.Description">
                    </td>

                    <td>
                        @item.Description
                    </td>
                    <td>

                        <a href="@item.ProductUrl">View product in store</a>
                    </td>
                    <td>
                        @item.Prices.Count()
                    </td>
                    <td>
                        <input type="button" class="btn btn-info btn-block" onclick="location.href='@Url.Action("Details", "Home", new {id=item.Id})'" value="Details">
                    </td>
                    
                </tr>
                }

            </tbody>
        </table>
    </div>
}

else
{
    <center>No items found</center>
}

